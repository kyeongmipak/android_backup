<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="---- 커서 및 포커스 ----"
        />

    <!--  힌트 대신 디폴트 값 선택할 때 한번 클릭으로 전체 선택되는 기능  -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="selectAllOnFocus"
        android:selectAllOnFocus="true"
        />

    <!--  글 중간에들어가도 커서가 생성되어 있음  -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cusor Visible"
        android:cursorVisible="true"
        />


    <!--  AutoLink  -->
    <!--  링크 걸린데로 바로 연결  -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto Link Test. http://www.naver.com home page. aaa@naver.com mail address"
        android:autoLink="web|email"
        />

    <!--  Line 간격 -->
    <!--  기본  -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="동해 물과 백두산이 마르고 닳도록 하느님이 보우하사 우리나라 만세. 무궁화 삼천리 화려 강산 대한 사람, 대한으로 길이 보전하세."
        />

    <!--  줄간격 조정(multiplier : 신버전 방식) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="동해 물과 백두산이 마르고 닳도록 하느님이 보우하사 우리나라 만세. 무궁화 삼천리 화려 강산 대한 사람, 대한으로 길이 보전하세."
        android:lineSpacingMultiplier="1.3"
        />

    <!--  줄간격 조정(multiplier : 구버전 방식) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="동해 물과 백두산이 마르고 닳도록 하느님이 보우하사 우리나라 만세. 무궁화 삼천리 화려 강산 대한 사람, 대한으로 길이 보전하세."
        android:lineSpacingExtra="100dp"
        android:background="#ff0000"
        />

    <!--  multiplier와 extra는 동일 기능이지만 같이 사용하면 좋다  -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="동해 물과 백두산이 마르고 닳도록 하느님이 보우하사 우리나라 만세. 무궁화 삼천리 화려 강산 대한 사람, 대한으로 길이 보전하세."
        android:lineSpacingMultiplier="1.3"
        android:lineSpacingExtra="100dp"
        android:background="#ff0000"
        />

</LinearLayout>